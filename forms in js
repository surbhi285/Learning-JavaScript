//FORMS
//SELECT THE ELEMENT->FIRST STEP
const nameInput=document.getElementById("name");
const nameagainInput=document.getElementById("name");
console.dir(nameInput);
//Use of "keypress"
nameInput.addEventListener("keypress", (event) =>{
    console.log("I clicked the button")
    console.log(event)
    let key = event.key;
    console.log(key)
})

//USE OF "KEYDOWN"
nameInput.addEventListener("keydown", (event)=>{
    console.log("button clicked")
     console.log(event)
    let key = event.key;
    console.log(key)
})

// //COPY AND PASTE
nameInput.addEventListener("copy", (event)=>{
console.log("copying!!")
})

//focus
nameInput.addEventListener("focus", (event)=>{
    console.log("heyy there iam focused")
})
